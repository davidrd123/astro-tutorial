---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'About Me';

const identity = {
  firstName: 'David',
  lastName: 'Dickinson',
  country: 'United States',
  occupation: 'Software Developer',
  hobbies: ["photography, cycling, hiking, reading, and cooking"],
};

const skills = {
  backEnd: ['Node.js', 'Ruby', 'Go', 'Express', 'MongoDB', 'PostgreSQL'],
  frontEnd: ['HTML/CSS', 'JavaScript', 'TypeScript', 'React/Redux', 'Handlebars'],
  Cloud: ['DigitalOcean', 'AWS (EC2, S3, IAM, ECS, RDS)', 'Heroku', 'Fly.io', 'Netlify', 'Vercel'],
  other: ['Git/GitHub', 'Docker', 'Linux', 'Bash', 'HTTP', 'WebSockets', 'Jest', 'OOP', 'Nginx', 'Postman']
}

const skillColor = "green";
const fontWeight = "bold";
const textCase = "titlecase";
---
<style define:vars={{skillColor, fontWeight, textCase}}>
  .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);

      }
</style>

<BaseLayout title={pageTitle}>

		<h1>{pageTitle}</h1>
    <h2>... and my new Astro site!</h2>

    <p>
      I'm a web developer, and I'm excited to use Astro to build my new site.
    </p>

    <p>
      I'm working through the astro docs 'build a blog' tutorial with this
    </p>

    <p>Here are a few facts about me:</p>
    <ul>
      <li>My name is {identity.firstName}.</li>
      <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
      {identity.hobbies.length >= 2 &&
        <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}.</li>
      }
    </ul>
    <p>My skills are:</p>
    <table>
      <tr>
        <th>Back End</th>
        <th>Front End</th>
        <th>Cloud</th>
        <th>Other</th>
      </tr>
      <tr>
        <td class="skill">{skills.backEnd.join(', ')}</td>
        <td class="skill">{skills.frontEnd.join(', ')}</td>
        <td class="skill">{skills.Cloud.join(', ')}</td>
        <td class="skill">{skills.other.join(', ')}</td>
      </tr>
    </table>

  </BaseLayout>
